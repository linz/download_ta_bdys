#!/bin/bash

set -e

SCRIPT=${0##*/}
SUCCESS=0
FAILURE=1

PACKAGE=linz-download-ta-bdy
PACKAGE_LOG_DIR=/var/log/$PACKAGE
PACKAGE_USER=lds_bde

# creating package user if it isn't already there
if ! getent passwd $PACKAGE_USER >/dev/null; then
        adduser \
          --system \
          --ingroup $PACKAGE_USER \
        $PACKAGE_USER >/dev/null
fi

# now create log directory if it does not exist.
if [ ! -d $PACKAGE_LOG_DIR ]; then
    mkdir -p $PACKAGE_LOG_DIR
fi
chown -R $PACKAGE_USER:adm $PACKAGE_LOG_DIR;
chmod 0755 $PACKAGE_LOG_DIR;

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
